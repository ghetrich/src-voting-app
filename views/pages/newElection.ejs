<script type="text/javascript">
	const electionForm = document.getElementById("electionForm");

	const time_assembler = (h, m, s) => {
		return `${h}:${m}:${s}`;
	};

	const dateTime_assembler = (d, t, divider) => {
		return `${d}${divider}${t}`;
	};

	electionForm.addEventListener("submit", async e => {
		e.preventDefault();

		const header = document.getElementById("header");

		const about = document.getElementById("about");

		const banner = document.getElementById("banner");

		const start_date = document.getElementById("datepicker-start");

		const end_date = document.getElementById("datepicker-end");

		const end_time_hrs = document.getElementById("end_time_hrs");
		const end_time_min = document.getElementById("end_time_min");
		const end_time_sec = document.getElementById("end_time_sec");

		//Start time

		const start_time_hrs = document.getElementById("start_time_hrs");
		const start_time_min = document.getElementById("start_time_min");
		const start_time_sec = document.getElementById("start_time_sec");

		const end_time = time_assembler(
			end_time_hrs.value,
			end_time_min.value,
			end_time_sec.value
		);

		const start_time = time_assembler(
			start_time_hrs.value,
			start_time_min.value,
			start_time_sec.value
		);

		const start_dateTime = dateTime_assembler(
			start_date.value,
			start_time,
			"T"
		);

		const end_dateTime = dateTime_assembler(end_date.value, end_time, "T");

		console.log({
			header: header.value,
			about: about.value,
			start_time: start_dateTime,
			end_time: end_dateTime,
		});

		let data = new FormData();

		data.append("header", header.value);
		data.append("about", about.value);
		data.append("startsAt", start_dateTime);
		data.append("endsAt", end_dateTime);
		data.append("banner", banner.files[0]);

		const saveElection = await fetch(`/elections/new`, {
			method: "POST",
			body: data,
		}).then(response => {
			return { status: response.status, data: response.json() };
		});

		if (saveElection.status == 200) {
			console.log(saveElection.data);
			document.getElementById("modal_success_election").innerText = saveElection.data
			document.getElementById("modal_success_call").click();
		} else {
		}
	});

	document.getElementById("success_stay").addEventListener("click", e => {
		e.preventDefault();
		window.location.reload();
	});
</script>
