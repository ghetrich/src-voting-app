<script>
	// @formatter:off
	document.addEventListener("DOMContentLoaded", function () {
		window.Litepicker &&
			new Litepicker({
				element: document.getElementById("datepicker-end"),
				buttonText: {
					previousMonth:
						'<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><polyline points="15 6 9 12 15 18" /></svg>',
					nextMonth:
						'<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><polyline points="9 6 15 12 9 18" /></svg>',
				},
			});
	});
	// @formatter:on
</script>
<script type="text/javascript">
	const positionForm = document.getElementById("positionForm");
	const restricted = document.getElementById("restricted");
	const eligibleVoters = document.getElementById("eligibleVoters");

	let allowedVoterGroups = [];
	let candidateslist = [];

	restricted.addEventListener("change", e => {
		$("#eligibleVoters").toggleClass("d-none");

		if (!e.target.checked) {
			$.each($("input[name=eligibleGroup]:checked"), function () {
				$(this).click();
			});
		}
	});

	positionForm.addEventListener("submit", async e => {
		e.preventDefault();

		const position = document.getElementById("position");

		const about = document.getElementById("about");

		let isGeneral = true;

		if (restricted.checked) {
			isGeneral = false;
		}

		$.each($("input[name=eligibleGroup]:checked"), function () {
			allowedVoterGroups.push($(this).val());
		});

		$.each($("input[name=amCandidate]:checked"), function () {
			candidateslist.push($(this).val());
		});

		console.log({
			position: position.value,
			about: about.value,
			eligibleVoters: allowedVoterGroups,
			candidates: candidateslist,
		});

		const savePosition = await fetch(`/position/new/<%=election._id%>`, {
			method: "POST",
			headers: {
				"Content-Type": "application/json",
			},
			body: JSON.stringify({
				position: position.value,
				about: about.value,
				isGeneral,
				allowedVoterGroups,
				candidates: candidateslist,
			}),
		}).then(response => response.json());

		console.log(savePosition.error);
	});
</script>
