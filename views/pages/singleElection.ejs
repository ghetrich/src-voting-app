									<div class="row g-2">
										<div class="col-5">
											<select
												name="end_time[hour]"
												class="form-select"
												id="end_time_hrs"
											>
												<%-include('../partials/time_options_hrs.ejs')%>
											</select>
										</div>
										<div class="col-3">
											<select
												name="end_time[minutes]"
												class="form-select"
												id="end_time_min"
											>
												<%-include('../partials/time_options.ejs')%>
											</select>
										</div>
										<div class="col-4">
											<select
												name="end_time[seconds]"
												class="form-select"
												id="end_time_sec"
											>
												<%-include('../partials/time_options.ejs')%>
											</select>
										</div>
